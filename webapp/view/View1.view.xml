<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" titleAlignment="Center">
        <content>
            <Carousel id="questionCarousel" pages="{quizModel>/Questions}"  pageChanged="onPageChanged">
                <pages>
                    <Panel height="100%">
                        <headerToolbar>
                            <Toolbar height="auto">
                                <Title text="{quizModel>question}" textAlign="Center" width="100%" wrapping="true" class="sapUiTinyMargin"/>
								</Toolbar>
							</headerToolbar>
							<ProgressIndicator id="quizProgress" width="100%" percentValue="{quizModel>/progress}" class="sapUiLargeMarginBottom" displayValue="{quizModel>/progressText}" displayAnimation="true"/>
                        <content>
                            <HBox justifyContent="Center" alignItems="Center" class="sapUiSmallMargin" height="auto">
                                <VBox justifyContent="Center" alignItems="Center" class="sapUiSmallMargin" width="auto">
                                    <List id="optionsList"
                                        mode="{= ${quizModel>multiple} ? 'MultiSelect' : 'SingleSelectLeft'}"
                                        selectionChange="onOptionSelect"
                                        items="{quizModel>options}"  class="sapUiSmallMarginTop">
                                        <items>
                                            <StandardListItem title="{quizModel>text}" wrapping="true"/>
                                        </items>
                                    </List>
                                </VBox> 
                            </HBox>
                        </content>
                    </Panel>
                </pages>
            </Carousel>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button id='submitQuizButton' text="Submit Quiz" visible="false" press="onSubmitQuiz"/>
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
	<Dialog id="resultsDialog" title="Quiz Results" icon="sap-icon://result" state="{quizModel>/dialogState}">
        <content>
            <VBox class="sapUiSmallMargin">
                <Text id="resultsText"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Restart Quiz" press="onRestartQuiz"/>
        </beginButton>
    </Dialog>
</mvc:View>
